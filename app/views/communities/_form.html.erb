<%= simple_form_for(@community, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :about, as: :text, input_html: {rows: "3" } %>
    <%= f.input :link %>
    <%= f.input :rss_feed %>
  </div>

  <br>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
